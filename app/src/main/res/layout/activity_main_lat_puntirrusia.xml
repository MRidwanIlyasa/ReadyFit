<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainLatPuntirrusia"
    android:background="#123">


    <VideoView
        android:id="@+id/video"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Crunch Perut"
        android:textColor="#195"
        android:textStyle="bold"
        android:textSize="20dp"

        />
    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/judul"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:text="Berbaring dengan lutut ditekuk kemudian angkat bahu dari lantai sampai bagian dada menyentuh
bagian paha kemudian kembali berbaring seperti posisi semula\n\nLatihan ini dapat melatih pada otot rektus dan otot oblik"
        android:textStyle=""/>



</RelativeLayout>